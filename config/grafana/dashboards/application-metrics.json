{
  "id": null,
  "title": "Application Metrics",
  "tags": ["application", "metrics"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Service Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\"user-service|auth-service\"}",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Service Uptime",
      "type": "graph",
      "targets": [
        {
          "expr": "process_uptime_seconds{job=~\"user-service|auth-service\"}",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "yAxes": [
        {
          "label": "Uptime",
          "min": 0
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=~\"user-service|auth-service\"} / 1024 / 1024",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "yAxes": [
        {
          "label": "Memory (MB)",
          "min": 0
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MB"
        }
      }
    },
    {
      "id": 4,
      "title": "CPU Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=~\"user-service|auth-service\"}[5m]) * 100",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "yAxes": [
        {
          "label": "CPU %",
          "min": 0,
          "max": 100
        }
      ]
    },
    {
      "id": 5,
      "title": "Open File Descriptors",
      "type": "graph",
      "targets": [
        {
          "expr": "process_open_fds{job=~\"user-service|auth-service\"}",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "yAxes": [
        {
          "label": "Open FDs",
          "min": 0
        }
      ]
    },
    {
      "id": 6,
      "title": "HTTP Requests (if available)",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=~\"user-service|auth-service\"}[5m])",
          "refId": "A",
          "legendFormat": "{{job}}"
        },
        {
          "expr": "rate(http_server_requests_seconds_count{job=~\"user-service|auth-service\"}[5m])",
          "refId": "B",
          "legendFormat": "{{job}} (server)"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "yAxes": [
        {
          "label": "Requests per second",
          "min": 0
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
} 